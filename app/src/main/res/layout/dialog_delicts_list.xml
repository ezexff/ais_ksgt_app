<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="7dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">
            <TextView
                android:id="@+id/dtvObjectName"
                android:paddingLeft="7dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Наименование объекта"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/dtvDescription"
                android:paddingLeft="14dp"
                android:paddingBottom="7dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Подконтрольный объект"
                android:textColor="#c0c0c0"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/dCheckLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/dTextViewRecyclerView"
                    android:text="Список нарушений"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerViewDelicts"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scrollbars="none">
                </android.support.v7.widget.RecyclerView>

                <!--<Button
                    android:id="@+id/dbtnAdd"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Добавить"
                    android:layout_marginTop="10dp"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/view1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:elevation="12dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/photoPanorama"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/ic_add_photo"
                                android:scaleType="centerCrop"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="фото\nпанорама\nобъекта"
                            android:textSize="13sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/view2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:elevation="12dp"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            android:thicknessRatio="1.9"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/photoHouseNumber"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/ic_add_photo"
                                android:scaleType="centerCrop"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="фото\nномера\nдома"
                            android:textSize="13sp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            />
                    </LinearLayout>


                    <Button
                        android:id="@+id/dbtnAdd"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Добавить новое нарушение"
                        android:layout_gravity="center_horizontal"/>



                </LinearLayout>

                <Button
                    android:id="@+id/dbtnClose"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="Завершить добавление нарушений"
                    android:textStyle="normal"
                    android:background="@drawable/button"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>